# Production Environment Configuration
# Copy this to .env for production deployment

# Factorial Credentials (REQUIRED)
FACTORIAL_EMAIL=your-email@company.com
FACTORIAL_PASSWORD=your-secure-password

# Work Schedule
WORK_START_TIME=09:00
WORK_END_TIME=17:00
DEFAULT_BREAK_MINUTES=60

# Automation Schedule
CRON_SCHEDULE=0 18 * * *

# Browser Configuration - Optimized for NAS/slower networks
HEADLESS=true
BROWSER_TIMEOUT=120000
PAGE_TIMEOUT=60000

# Network timeout settings for slower NAS connections
NAVIGATION_TIMEOUT=90000
ELEMENT_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/factorial-automation.log

# Timezone (important for cron scheduling)
TZ=Europe/Madrid

# NAS-specific optimizations
NODE_ENV=production
NODE_OPTIONS="--max-old-space-size=512"

# Network configuration (if needed)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1