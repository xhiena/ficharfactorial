# Production Environment Configuration
# Copy this to .env and fill in your actual values

# Factorial Credentials (REQUIRED)
FACTORIAL_EMAIL=your-email@company.com
FACTORIAL_PASSWORD=your-secure-password

# Work Schedule
WORK_START_TIME=09:00
WORK_END_TIME=17:00
DEFAULT_BREAK_MINUTES=60

# Automation Schedule
# Format: minute hour day_of_month month day_of_week
# Examples:
#   0 18 * * *        = Every day at 18:00 (6 PM)
#   0 9 * * 1-5       = Monday to Friday at 09:00 (9 AM)
#   30 17 * * *       = Every day at 17:30 (5:30 PM)
#   0 8,17 * * 1-5    = Monday to Friday at 08:00 and 17:00
CRON_SCHEDULE=0 18 * * *

# Browser Configuration
HEADLESS=true
BROWSER_TIMEOUT=30000
PAGE_TIMEOUT=10000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/factorial-automation.log

# Timezone (important for cron scheduling)
TZ=Europe/Madrid

# Optional: If your server is behind a proxy
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1