# Factorial App Credentials
FACTORIAL_EMAIL=your-email@example.com
FACTORIAL_PASSWORD=your-password

# Configuration
HEADLESS=false
BROWSER_TIMEOUT=30000
PAGE_TIMEOUT=10000

# Work Hours Configuration
DEFAULT_WORK_HOURS=8
DEFAULT_START_TIME=09:00
DEFAULT_END_TIME=17:00
DEFAULT_BREAK_MINUTES=60

# Docker Configuration (for containerized deployment)
# Cron schedule format: minute hour day_of_month month day_of_week
# Examples:
#   0 18 * * *        = Every day at 18:00 (6 PM)
#   0 9 * * 1-5       = Monday to Friday at 09:00 (9 AM)
#   30 17 * * *       = Every day at 17:30 (5:30 PM)
#   0 8,17 * * 1-5    = Monday to Friday at 08:00 and 17:00
CRON_SCHEDULE=0 18 * * *

# Logging
LOG_LEVEL=info
LOG_FILE=logs/factorial-automation.log